<view>
  <view>
    校区: {{campus}}
  </view>
  <view>　预约日期: {{date}}</view>
  <text>　预约时间：</text>

  <view wx:for="{{period}}" wx:for-index="key" wx:for-item="value">
    <view wx:if="{{value==true}}">
      {{key}}
    </view>
  </view>
</view>

<text>\n</text>
<view class="view-contain-ti">
    <text class="text-ti">预约人</text>
    <input class="input1" placeholder="" bindinput="person" value="{{user_name}}"></input>
</view>
<view class="view-contain-ti">
    <text class="text-ti">借用单位</text>
    <input class="input1" placeholder="" bindinput="unit"></input>
</view>
<view class="view-contain-ti">
    <text class="text-ti">电话</text>
    <input class="input1" placeholder="" bindinput="call" value="{{user_phone}}"></input>
</view>
  <view class="flex-center-in-row">请确认您的申请时间并填写相关信息</view>
